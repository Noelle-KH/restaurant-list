<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
      {{#unless keyword}}
        <form class="d-flex justify-content-end m-0" action="/" method="GET">
          <div>
            <select
              class="form-select form-select-sm"
              aria-label="select sort"
              role="button"
              name="sort"
              onchange="this.form.submit()"
            >
              <option {{#if sortSelected.default}} selected {{/if}} value="default">Sort by</option>
              <option {{#if sortSelected.AtoZ}} selected {{/if}} value="AtoZ">A → Z</option>
              <option {{#if sortSelected.ZtoA}} selected {{/if}} value="ZtoA">Z → A</option>
              <option {{#if sortSelected.category}} selected {{/if}} value="category">類別</option>
              <option {{#if sortSelected.location}} selected {{/if}} value="location">地區</option>
            </select>
          </div>
        </form>
      {{/unless}}
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div class="text-secondary">
            <div class="card mb-3">
              <a href="/restaurants/{{this._id}}">
                <img
                  class="card-img-top"
                  src="{{this.image}}"
                  alt="{{this.name}}"
                />
              </a>
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{this.category}}
                </div>

                <div
                  class="d-flex justify-content-between align-items-center mt-3"
                >
                  <span class="badge rounded-pill bg-danger">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                  <span>
                    <a href="/restaurants/{{this._id}}/edit">
                      <i class="fa-solid fa-pen-to-square text-primary"></i></a>
                    <a href="/restaurants/{{this._id}}" class="mx-2">
                      <i class="fa-solid fa-circle-info text-info"></i></a>
                    <a
                      href="/restaurants/{{this._id}}/delete"
                      onclick="return confirm(`確定要刪除 {{this.name}} 嗎?`)"
                    >
                      <i class="fa-solid fa-trash text-dark"></i></a>
                  </span>
                </div>

              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>